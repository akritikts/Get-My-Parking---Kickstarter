<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    tools:context="silive.in.kiskstarter.activities.DetailsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:src="@drawable/one"
        android:layout_weight="0"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_name"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="24sp"
                android:layout_weight="0.6"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_pld"
                android:text="Amount Pledeged : "
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_weight="0.8"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_backers"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="18sp"
                android:text="Backers : "
                android:layout_weight="0.8"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_by"
                android:text="By : "
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_weight="0.8"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_fund"
                android:text="Fund percentage : "
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_weight="0.8"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pro_location"
                android:text="Location : "
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_weight="0.8"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
